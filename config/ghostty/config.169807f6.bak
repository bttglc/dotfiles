# Ghostty Configuration with Gruvbox Dark Theme
# Install to: ~/.config/ghostty/config
#
# Ghostty is a fast, native, GPU-accelerated terminal emulator
# Documentation: https://ghostty.org

# ============================================================================
# Font Configuration
# ============================================================================

font-family = "MesloLGS Nerd Font"
font-size = 13

# ============================================================================
# Window Configuration
# ============================================================================

window-padding-x = 10
window-padding-y = 10
window-decoration = true

# Background opacity (1.0 = opaque, 0.0 = transparent)
background-opacity = 0.95

# ============================================================================
# Gruvbox Dark Theme Colors
# ============================================================================

# Background and foreground
background = 282828
foreground = ebdbb2

# Cursor
cursor-color = ebdbb2

# Selection colors
selection-background = 504945
selection-foreground = ebdbb2

# Normal colors (0-7)
palette = 0=#282828
palette = 1=#cc241d
palette = 2=#98971a
palette = 3=#d79921
palette = 4=#458588
palette = 5=#b16286
palette = 6=#689d6a
palette = 7=#a89984

# Bright colors (8-15)
palette = 8=#928374
palette = 9=#fb4934
palette = 10=#b8bb26
palette = 11=#fabd2f
palette = 12=#83a598
palette = 13=#d3869b
palette = 14=#8ec07c
palette = 15=#ebdbb2

# ============================================================================
# Terminal Features
# ============================================================================

# Scrollback history
scrollback-limit = 10000

# Shell integration
shell-integration = detect

# ============================================================================
# Behavior
# ============================================================================

# Mouse support
mouse-hide-while-typing = true

# Copy to clipboard on selection
copy-on-select = true

# Confirm before closing if running processes
confirm-close-surface = true

# ============================================================================
# macOS Specific
# ============================================================================

# macOS window options
macos-titlebar-style = transparent
macos-option-as-alt = true
